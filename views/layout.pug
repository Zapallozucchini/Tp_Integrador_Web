html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title

    // Bootstrap CSS
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    )

    // Bootstrap Icons
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    )

    // Estilos personalizados
    style.
      .connection-badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
      }
      .connection-badge.connected {
        background-color: #198754;
      }
      .connection-badge.disconnected {
        background-color: #dc3545;
      }
      .navbar-brand img {
        height: 40px;
        margin-right: 10px;
      }

  body
    // Barra de navegación mejorada
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.sticky-top
      .container
        a.navbar-brand(href="/")
          i.bi.bi-hospital.me-2
          | Sistema Hospitalario

        // Estado de conexión a la BD
        .connection-status.mx-3
          if dbStatus && dbStatus.includes('✅')
            span.badge.connection-badge.connected
              i.bi.bi-database-check.me-1
              | Conexión estable
          else
            span.badge.connection-badge.disconnected
              i.bi.bi-database-dash.me-1
              | Sin conexión

        button.navbar-toggler(
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarContent"
          aria-controls="navbarContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        )
          span.navbar-toggler-icon

        .collapse.navbar-collapse#navbarContent
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href="/pacientes")
                i.bi.bi-people.me-1
                | Pacientes

            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              )
                i.bi.bi-clipboard-pulse.me-1
                | Admisiones
              ul.dropdown-menu
                li
                  a.dropdown-item(href="/admisiones/nueva")
                    i.bi.bi-plus-circle.me-2
                    | Nueva admisión
                li
                  a.dropdown-item(href="/admisiones")
                    i.bi.bi-list-ul.me-2
                    | Listado de admisiones

            li.nav-item
              a.nav-link(href="/enfermeria")
                i.bi.bi-heart-pulse.me-1
                | Enfermería
            li.nav-item
              a.nav-link(href="/medicos")
                i.bi.bi-file-medical.me-1
                | Médicos

          ul.navbar-nav.ms-auto
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              )
                i.bi.bi-person-circle.me-1
                | Recepcionista
              ul.dropdown-menu.dropdown-menu-end
                li
                  a.dropdown-item(href="#")
                    i.bi.bi-person.me-2
                    | Mi perfil
                li
                  a.dropdown-item(href="#")
                    i.bi.bi-gear.me-2
                    | Configuración
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href="#")
                    i.bi.bi-box-arrow-right.me-2
                    | Cerrar sesión

    .container.my-4
      block content

    // Bootstrap JS
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    )